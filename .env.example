# Bybit API credentials (demo/mock - not used for real trading)
BYBIT_API_KEY=demo_key
BYBIT_API_SECRET=demo_secret

# Telegram notification settings
# Get your bot token from @BotFather on Telegram
# Get your chat ID by messaging @userinfobot
TELEGRAM_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Trading pair (default: BTCUSDT)
TRADING_PAIR=BTCUSDT

# RSI thresholds
RSI_OVERSOLD=20
RSI_OVERBOUGHT=80

# Initial balances for simulation (used to enforce double-spend protection)
DEFAULT_BASE_BALANCE=1.0
DEFAULT_QUOTE_BALANCE=50000
DEFAULT_ORDER_QUANTITY=0.01

# Security configuration
# Comma-separated list of API keys allowed to call protected endpoints
# Plain keys: API_KEYS=my_key,other_key
# Hashed keys (prefix with hash:). Generate with security.KeyManager.hash_value or tooling
API_KEYS=example_api_key_123,hash:your_hashed_key_here
# Optional pepper used for hashing secrets (leave blank if unused)
KEY_HASH_PEPPER=optional_pepper_value
# Custom header name for API key auth (optional)
API_KEY_HEADER_NAME=X-API-Key
